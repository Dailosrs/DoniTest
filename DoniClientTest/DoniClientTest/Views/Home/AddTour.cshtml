@model Tour

@{ Layout = "_Layout"; ViewBag.Title = "Añade un tour";}

<h2 class="text-center">Añade un tour</h2>
<form asp-action="AddTour" method="post" style="width:50%; margin-left:25%">
    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        <input class="form-control" name="Nombre" />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripcion:</label>
        <input class="form-control" name="Descripcion" />
    </div>
    <div class="form-group">
        <label for="Observaciones">Observaciones:</label>
        <input class="form-control" name="Observaciones" />
    </div>
    <div class="form-group">
        <label for="UrlImagen">UrlImagen:</label>
        <input class="form-control" name="UrlImagen" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Añadir tour</button>
        <a asp-action="Index" class="btn btn-sm btn-secondary" style="margin-left:15px">Regresar</a>
    </div>
</form>

@if (Model != null)
{
    <h2>Tour</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Nombre</th><th>Descripcion</th><th>Observaciones</th><th>UrlImagen</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Nombre</td>
                <td>@Model.Descripcion</td>
                <td>@Model.Observaciones</td>
                <td>@Model.UrlImagen</td>
            </tr>
        </tbody>
    </table>
}

